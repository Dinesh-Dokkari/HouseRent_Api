@model HappyHouse.Models.HouseNumberCreateDto


<h1>CreateHouseNumber</h1>

<h4>HouseNumberCreateDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateHouseNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-2">
                    <label asp-for="HouseNo" class="control-label"></label>
